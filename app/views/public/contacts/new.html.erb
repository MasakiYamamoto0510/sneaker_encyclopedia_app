<%= flash[:alert] %>

<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">

    <%= form_with model: @contact, url: confirm_contacts_path, local: true do |f| %>

      <div class="mb-2">
        <%= f.label :name, 'お名前（必須）', class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="mb-2">
        <%= f.label :email, 'メールアドレス（必須）', class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="mb-2">
        <%= f.label :subject, '件名（必須）', class: 'form-label' %>
        <%= f.text_area :subject, class: 'form-control' %>
      </div>

      <div class="mb-2">
        <%= f.label :message, 'メッセージ（必須）', class:'form-label' %>
        <%= f.text_area :message, rows: 8, class: 'form-control' %>
      </div>
      
      <div class="d-grid mb-2">
        <%= f.submit '入力内容確認', class: 'btn btn-primary w-100' %>
      </div>

    <% end %>
  </div>
</div>
