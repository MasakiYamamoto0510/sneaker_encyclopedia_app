<div class="container">
  <div class="row">
    <div class="col-lg-4">
    </div>
    <div class="col-lg-4">
      <% if @customer.errors.any? %>
        <%= @customer.errors.count %>件のエラーが発生しました
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
    </div>
    <div class="col-lg-4">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
    </div>
    <div class="col-lg-4">
      <h1>プロフィール編集</h1>

      <%= form_with model: @customer, url: mypage_path, method: :patch do |f| %>
        <p>
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        </p>
        <p>
          <label for="inputImage">ProfileImage</label>
          <%= image_tag @customer.get_profile_image %>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          
        </p>
        <p>
          <%= f.submit "変更を保存" %>
        </p>
        <p>
          <%= link_to "退会", unsubscribe_path(current_customer.id) %>
        </p>
      <% end %>
    </div>
    <div class="col-lg-4">
    </div>
  </div>
</div>