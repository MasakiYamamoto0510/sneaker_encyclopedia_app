<div class="row">
  <div class="col-lg-4">
  </div>
  <div class="col-lg-4">
    <h1>マイページ</h1>
    <h3><%= @customer.name %></h3>
    <%= image_tag @customer.get_profile_image(100,100) %>
  
    <%= link_to "プロフィール編集", edit_customer_path(@customer.id) %>
    <h4>自己紹介</h4>
    <%= @customer.self_introduction %>

    <h4>投稿一覧</h4>
    <% @posts.each do |post| %>
      <p>Title: <%= post.title %></p>
      <p>Body: <%= post.body %></p>
      <%= link_to "詳細", post_path(post.id) %>
    <% end %>

    <h4>いいね一覧</h4>
    <% @favorites.each do |favorite| %>
      <%= link_to sneaker_path(favorite.sneaker.id) do %><%= image_tag favorite.sneaker.get_image(100,100) %><% end %>
    <% end %>

    <h4>新規発掘 投稿</h4>
    <div>
    <p><%= link_to "新規発掘", new_sneaker_path %></p>
  </div>
  <div class="col-lg-4">
  </div>
</div>
