<div class='row justify-content-center'>
  <div class='col-md-8 col-lg-6'>

    <div class='row mb-4'>
      <div class='col text-center'>
        <h1 class='h3'>編集画面</h1>
      </div>
    </div>


    <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class='mb-2'>
        <%= image_tag @post.get_image(100,100), class: 'mb-1' %>
        <%= f.label :image, class: 'form-label'%>
        <%= f.file_field :image, accept: 'image/*', class: 'form-control' %>
      </div>

      <div class='mb-2'>
        <%= f.label :sneaker_id %>
        <%= f.select :sneaker_id, @sneakers.map { |sneaker| [sneaker.sneaker_name_en, sneaker.id] }, {selected: @post.sneaker_id} %>
      </div>

      <div class='mb-2'>
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class='mb-2'>
        <%= f.label :body, class: 'form-label' %>
        <%= f.text_area :body, rows: 6, class: 'form-control' %>
      </div>

      <div class='mb-2'>
        <%= f.submit 'Update', class: 'btn btn-primary w-100' %>
      </div>
    <% end %>
  </div>
</div>
