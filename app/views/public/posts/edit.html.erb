<div class="row d-flex flex-column">
  <div class="row mx-auto">
    <h1>編集画面</h1>
  </div>
  <div class="row mx-auto">
    <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
      <%= render "layouts/error_messages", model: f.object %>

      <div class="mb-2">
        <%= image_tag @post.get_image(100,100) %>
        <%= f.label :image %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div class="mb-2">
        <%= f.label :sneaker_id %>
        <%= f.select :sneaker_id, @sneakers.map { |sneaker| [sneaker.sneaker_name_en, sneaker.id] }, {selected: @post.sneaker_id} %>
      </div>

      <div class="mb-2">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div class="mb-2">
        <%= f.label :body %>
        <%= f.text_area :body %>
      </div>

      <div class="mb-2">
        <%= f.submit '更新' %>
      </div>
    <% end %>
  </div>
</div>
