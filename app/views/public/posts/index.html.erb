<table class="table table-striped">
  <thead>
      <tr>
          <th>#</th>
          <th>Image</th>
          <th>Sneakername</th>
          <th>Title</th>
      </tr>
  </thead>
 
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th><%= post.id %></th>
        <td><%= image_tag post.get_image(100,100) %></td>
        <td><%= link_to sneaker_path(post.sneaker.id) do %><%= post.sneaker.sneaker_name_en %><% end %></td>
        <td><%= link_to post_path(post.id) do %><%= post.title %><% end %></td>
      </tr>
    <% end %>
  </tbody>

</table>