<div class="row">
  <div class="col-lg-4">
  </div>
  <div class="col-lg-4 d-flex flex-column">
    <h4>投稿詳細</h4>
    <p>投稿画像: <%= image_tag @post.get_image(100,100) %></p>
    <p>投稿者:  <%= image_tag @post.customer.get_profile_image(100,100) %><%= link_to customer_path(@post.customer.id) do %><%= @post.customer.name %><% end %></p>
    <p>Title: <%= @post.title %></p>
    <p>Body: <%= @post.body %></p>
    <p>投稿日: <%= @post.created_at.strftime('%Y/%m/%d')%></p>
      <% if @post.customer == current_customer %>
        <p><%= link_to "編集", edit_post_path(@post.id) %></p>
        <p><%= link_to "削除", post_path(@post.id), method: :delete, data: { confirm: "本当に削除しますか？"} %></p>
      <% end %>
    </p>
  </div>
  <div class="col-lg-4">
  </div>
</div>