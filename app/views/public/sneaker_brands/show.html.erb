<div class=" row d-flex justify-content-center mb-2">
  <%= render "layouts/sort", form_url: sneaker_brand_path(@sneaker_brand.id) %>
</div>

<div class="row">
  <h2><%= @sneaker_brand.name %>:(ブランド詳細)</h2>
</div>
<div class="row">
  <%= @sneaker_brand.overview %>
</div>

<div class="row">
  <h2>モデル</h2>
</div>

<div class="row">
  <ul style="list-style:none;">
    <% @sneaker_types.each do |sneaker_type| %>
      <li><%= link_to sneaker_brand_sneaker_type_path(@sneaker_brand.id, sneaker_type.id) do %><%= sneaker_type.name %><% end %></li>
    <% end %>
  </ul> 
</div>

<div class="row">
  <h2>スニーカー一覧</h2>
</div>

<div class="row">
  <%= render "shared/sneaker_card_list", sneakers: @sneakers %>
</div>