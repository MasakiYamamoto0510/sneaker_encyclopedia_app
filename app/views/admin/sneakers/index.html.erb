<div class=" row d-flex justify-content-center mb-2">
  <%= render partial: "layouts/sort", locals: { form_url: admin_sneakers_path } %>
</div>

<div class="row">
  <div class="col-md-2">
    <div class="row">
      <h2>全ブランド</h2>
    </div>
    <div class="row">
      <ul style="list-style:none;">
        <% @sneaker_brands.each do |sneaker_brand| %>
          <li>
            名前:<%= link_to admin_sneaker_brand_path(sneaker_brand.id) do %><%= sneaker_brand.name %><% end %>
          </li>
        <% end %>
      </ul>
       <%= link_to admin_sneaker_brands_path do %><p>もっと見る</p><% end %>
    </div>
  </div>

  <div class="col-md-2">
  </div>

  <div class="col-md-8">
    <div class="row">
      <h2>スニーカー一覧</h2>
    </div>
    <div class="row">
      <ul style="list-style:none;">
        <%= render partial: "shared/sneaker_card", collection: @sneakers, as: :sneaker %>
      </ul>
    </div>
  </div>

</div>

