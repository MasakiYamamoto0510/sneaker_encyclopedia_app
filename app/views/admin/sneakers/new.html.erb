<div class="container">
  <div class="row d-flex flex-column" >
    <div class="row mx-auto">
      <h1>スニーカー投稿フォーム</h1>
    </div>
      <%= form_with model: @sneaker, url: admin_sneakers_path do |f| %>
      <div class="row flex-column">
        <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
        <h4>スニーカー名</h4>
        <%= f.text_field :sneaker_name %>
        <h4>ブランド</h4>
        <%= f.select :sneaker_brand_id, options_for_select(@sneaker_brands.map{ |b| [b.name, b.id] }), include_blank: true %>
        <h4>概要</h4>
        <%= f.text_area :overview %>
        <h4>カラー</h4>
        <%= f.text_field :color %>
        <h4>製造年</h4>
        <%= f.select :year, options_for_select(((Time.now.year - 60)..Time.now.year).reverse_each), include_blank: "年" %>
        <%= f.select :month, options_for_select(1..12), include_blank: "月" %>
        <h4>サイズ(性別)</h4>
        <%= f.select :size_sex, Sneaker.gender_categories.keys.to_a, {}, class: 'form-control' %>
        <h4>サイズ(国)</h4>
        <%= f.country_select :size_country, include_blank: "日本" %>
        <h4>サイズ(数値表記)</h4>
        <%= f.text_field :numerical_size %>
        <%= f.submit '投稿' %>
      </div>
      <% end %>
  </div>
</div>