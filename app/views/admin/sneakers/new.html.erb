<div class="row justify-content-center" >
  <div class="col-md-8 col-lg-6">

    <div class="row mb-4">
      <div class="col text-center">
        <h1 class="h3">スニーカー投稿フォーム</h1>
      </div>
    </div>
   
      <%= form_with model: @sneaker, url: admin_sneakers_path do |f| %>
        <%= render "layouts/error_messages", model: f.object %>
      
        <div class="mb-2">
          <%= f.label :image, class: 'form-label' %>
          <%= f.file_field :image, accept: "image/*", class: 'form-control' %>
        </div>

        <div class="mb-2">
          <%= f.label :sneaker_type %>
          <%= f.select :sneaker_type_id, options_for_select(@sneaker_types.map{ |b| [b.name, b.id] }) %>
        </div>
        
        <div class="mb-2">
          <%= f.label :sneaker_name_en, class: 'form-label' %>
          <%= f.text_field :sneaker_name_en, class: 'form-control' %>
        </div>

        <div class="mb-2">
          <%= f.label :sneaker_name_jp, class: 'form-label' %>
          <%= f.text_field :sneaker_name_jp, class: 'form-control' %>
        </div>
        
        <div class="mb-2">
          <%= f.label :year %>
          <%= f.select :year, options_for_select(((Time.now.year - 60)..Time.now.year).reverse_each), include_blank: "" %>
        </div>

        <div class="mb-2">
          <%= f.label :month %>
          <%= f.select :month, options_for_select(1..12), include_blank: "" %>
        </div>

        <div class="mb-2">
          <%= f.label :size %>
          <%= f.collection_check_boxes(:size_ids, Size.all, :id, :size_value) do |b| %>
            <%= b.label { b.check_box + b.text } %>
          <% end %>
        </div>

        <div class="d-grid mb-2">
          <%= f.submit '投稿', class: 'btn btn-primary w-100' %>
        </div>

      <% end %>
  </div>
</div>
