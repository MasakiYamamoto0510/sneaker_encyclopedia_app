<h1>スニーカー投稿フォーム</h1>
<%= form_with model: @sneaker, url: admin_sneakers_path do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>スニーカー名</h4>
  <%= f.text_field :sneaker_name %>
  <h4>概要</h4>
  <%= f.text_area :overview %>
  <h4>カラー</h4>
  <%= f.text_field :color %>
  <h4>製造年</h4>
  <%= f.date_select :year_of_manufacture, {:discard_day => true} %>
  <%= f.submit '投稿' %>
<% end %>