<h1>スニーカー投稿フォーム</h1>
<%= form_with model: @sneaker, url: admin_sneakers_path do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>スニーカー名</h4>
  <%= f.text_field :sneaker_name %>
  <h4>概要</h4>
  <%= f.text_area :overview %>
  <h4>カラー</h4>
  <%= f.text_field :color %>
  <h4>製造年</h4>
  <%= f.select :year_of_manufacture, options_for_select(((Time.now.year - 50)..Time.now.year).reverse_each), include_blank: "年" %>
  <h4>サイズ(性別)</h4>
  <%= f.select :gender_category, Sneaker.gender_categories.keys.to_a, {}, class: 'form-control' %>
  <h4>サイズ(国)</h4>
  <%= f.country_select :size_country %>
  <h4>サイズ(数値表記)</h4>
  <%= f.text_field :numerical_size %>
  <%= f.submit '投稿' %>
<% end %>