<div class="container">
  <div class="row d-flex flex-column">
    <div class="row mx-auto">
      <h1>カスタマー一覧</h1>
    </div>
    <div class="row mx-auto">
      <ul>
        <% @customers.each do |customer| %>
          <li>
            <%= customer.name %> - <%= customer.email %> - <%= customer.point %> pt
            <%= link_to '削除', admin_customer_path(customer), method: :delete, data: { confirm: '本当に削除しますか？' } %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>