<!-- 1. 見出し --------------------------------------------------------->
<div class="row mb-4">
  <div class="col text-center">
    <h1 class="h3">ダッシュボード</h1>
  </div>
</div>

<!-- 2. カスタマー一覧 ------------------------------------------------->
<div class="row mb-5">
  <div class="col">
    <h2 class="h5 mb-3">カスタマー一覧</h2>

    <ul class="list-group">
      <% @customers.each do |customer| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= customer.name %> — <%= customer.email %></span>

          <%= link_to '削除',
                      admin_customer_path(customer),
                      method: :delete,
                      data: { confirm: '本当に削除しますか？' },
                      class: 'btn btn-sm btn-outline-danger' %>
        </li>
      <% end %>
    </ul>

    <div class="text-end mt-2">
      <%= link_to 'もっと見る', admin_customers_path, class: 'btn btn-link p-0' %>
    </div>
  </div>
</div>

<!-- 3. スニーカー一覧 ------------------------------------------------->
<div class="row">
  <div class="col">
    <h2 class="h5 mb-3">スニーカー一覧</h2>

    <ul class="list-group">
      <% @sneakers.each do |sneaker| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center gap-3">
            <%= image_tag sneaker.get_image(64, 64),
                          class: 'rounded',
                          alt: sneaker.sneaker_name_en %>

            <%= link_to sneaker.sneaker_name_en,
                        admin_sneaker_path(sneaker),
                        class: 'text-decoration-none' %>
          </div>

          <%= link_to '削除',
                      admin_sneaker_path(sneaker),
                      method: :delete,
                      data: { confirm: '本当に削除しますか？' },
                      class: 'btn btn-sm btn-outline-danger' %>
        </li>
      <% end %>
    </ul>

    <div class="text-end mt-2">
      <%= link_to 'もっと見る', admin_sneakers_path, class: 'btn btn-link p-0' %>
    </div>
  </div>
</div>
