<div class="row mb-4">
  <div class="col text-center">
    <h1 class="h3">スニーカー作成機能一覧</h1>
  </div>
</div>

<div class="row mb-5">
  <div class="col">

    <h2 class="h5 mb-3">スニーカーブランド投稿フォーム</h2>

    <%= link_to 'スニーカーブランド投稿フォーム',
                new_admin_sneaker_brand_path,
                class: 'btn btn-primary' %>
  </div>
</div>

<div class="row mb-5">
  <div class="col">

    <h2 class="h5 mb-3">スニーカーモデル投稿フォーム</h2>

    <ul class="list-group">
      <% @sneaker_brands.each do |brand| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">

          <span><%= brand.name %></span>

          <%= link_to '投稿フォーム',
                      new_admin_sneaker_brand_sneaker_type_path(brand),
                      class: 'btn btn-primary' %>
        </li>
      <% end %>
    </ul>

  </div>
</div>

<div class="row">
  <div class="col">

    <h2 class="h5 mb-3">スニーカー単体投稿フォーム</h2>

    <%= link_to 'スニーカー単体投稿フォーム',
                new_admin_sneaker_path,
                class: 'btn btn-primary' %>

  </div>
</div>
