<div class='row justify-content-center'>
  <div class='col-md-8 col-lg-6'>

    <div class='text-center'>
      <h1>管理者：マイページ</h1>
    </div>

    <div class='card shadow-sm mb-4'>
      <div class='card-body text-center'>
        <%= image_tag @admin.get_admin_profile_image(120,120), class: 'rounded-circle mb-3' %>
        <h2 class='h4 fw-bold mb-1'><%= @admin.name %><h2>
        <%= link_to "プロフィール編集", edit_admin_admin_path(@admin.id), class: 'btn btn-outline-primary btn-sm'%>
      </div>
    </div>

    <div class='card shadow-sm mb-4'>
      <div class='card-body'>
        <h3 class='h5 fw-bold mb-3'>自己紹介</h2>
        <p class='mb-0'><%= simple_format(@admin.self_introduction) %>
      </div>
    </div>
  </div>
</div>
