<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">

    <div class="row mb-4">
      <div class="col text-center">
        <h1 class="h3">スニーカーモデル編集フォーム</h1>
      </div>
    </div>

    <%= form_with model: @sneaker_type, url: admin_sneaker_brand_sneaker_type_path(@sneaker_brand.id, @sneaker_type.id), method: :patch do |f| %>
      <%= render "layouts/error_messages", model: f.object %>

      <div class="mb-2">
        <h4>モデル名:<%= @sneaker_type.name %></h4>
      </div>

      <div class="mb-2">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="mb-2">
        <%= f.label :overview, class: 'form-label' %>
        <%= f.text_area :overview, rows: 8, class: 'form-control' %>
      </div>

      <div class="d-grid mb-2">
        <%= f.submit 'Update', class: 'btn btn-primary w-100' %>
      </div>

    <% end %>

    <div class="mb-2">
      <%= link_to '削除', admin_sneaker_brand_sneaker_type_path(@sneaker_brand.id, @sneaker_type.id), method: :delete, "data-confirm" => "本当に削除しますか？"%>
    </div>
  </div>
</div>

