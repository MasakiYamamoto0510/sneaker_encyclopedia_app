<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">

    <div class="row mb-4">
      <div class="col text-center">
        <h1 class="h3">スニーカーモデル投稿フォーム</h1>
      </div>
    </div>

    <%= form_with model: @sneaker_type, url: admin_sneaker_brand_sneaker_types_path(@sneaker_brand.id)  do |f| %>
      <%= render "layouts/error_messages", model: f.object %>

      <div class="mb-2">
        <h4>ブランドネーム:<%= @sneaker_brand.name %></h4>
      </div>

      <div class="mb-2">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="mb-2">
        <%= f.label :overview, class: 'form-label' %>
        <%= f.text_area :overview, rows: 8, class: 'form-control' %>
      </div>

      <div class="d-grid mb-2">
        <%= f.submit '投稿', class: 'btn btn-primary w-100' %>
      </div>
      
    <% end %>
  </div>
</div>
