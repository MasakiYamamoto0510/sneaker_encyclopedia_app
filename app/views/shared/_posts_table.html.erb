<table class='table table-striped'>
  <thead>
      <tr>
          <th>#</th>
          <th>Image</th>
          <th>Sneakername</th>
          <th>Title</th>
      </tr>
  </thead>
 
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <th><%= post.id %></th>
        <td><%= image_tag post.get_image(100,100) %></td>
        <td><%= link_to post.sneaker.sneaker_name_en, sneaker_path_proc.call(post.sneaker) %></td>
        <td><%= link_to post.title, post_path_proc.call(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class='row mt-3'>
  <div class='col d-flex justify-content-center'>
    <%= paginate @posts %>
  </div>
</div>
