<% unless comment.customer == current_customer %>
  <% if comment.favorited_by?(current_customer) %>
    <%= link_to sneaker_comment_favorites_path(sneaker_comment_id: comment.id),
                method: :delete, remote: true do %>
      ❤︎いいね
    <% end %>
  <% else %>
    <%= link_to sneaker_comment_favorites_path(sneaker_comment_id: comment.id),
                method: :post, remote: true do %>
      ♡いいね
    <% end %>
  <% end %>
<% end %>
