<div class="container">
  <div class="row d-flex flex-column">
    <div class="row mx-auto">
      <h1>投稿フォーム</h1>
    </div>
    <div class="row mx-auto">
    <%= form_with model: @post do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>
      <%= f.submit '投稿' %>
    <% end %>
    </div>
  </div>
</div>