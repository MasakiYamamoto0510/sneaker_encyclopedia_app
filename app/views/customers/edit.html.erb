<div class="container">
  <div class="row">
    <div class="col-lg-4">
    </div>
    <div class="col-lg-4">
      <h1>プロフィール編集</h1>

      <%= form_with model: @customer, url: mypage_path, method: :patch do |f| %>
        <p>
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        </p>
        <p>
          <label for="inputEmail">Email</label>
          <%= f.text_field :email, id:"inputEmail", placeholder:"メールアドレス" %>
        </p>
        <p>
          <label for="password">Password</label>
          <%= f.password_field :password, id:"inputPassword", placeholder:"パスワード" %>
        </p>
        <p>
          <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </p>
        <p>
          <%= f.submit "変更を保存" %>
        </p>
      <% end %>
    </div>
    <div class="col-lg-4">
    </div>
  </div>
</div>