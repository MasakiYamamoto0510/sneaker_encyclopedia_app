<div>
  <h4><%= @customer.name %></h4>
  <%= image_tag @customer.get_profile_image(100, 100) %>
  <% if @customer == current_customer %>
    <p><%= link_to "プロフィール編集", edit_customer_path(@customer) %></p>
  <% end %>
</div>

<% @posts.each do |post| %>
  <div>
    <p>Title: <%= post.title %></p>
    <p>Body: <%= post.body %></p>
  </div>
<% end %>